# autojump config
[[ -s /usr/share/autojump/autojump.sh ]] && source /usr/share/autojump/autojump.sh

# PATH
path_prepend "$HOME/bin"
path_prepend "$HOME/.local/bin"

# Sync and Backup
DOCUMENT_ROOT="$HOME/Documents/Anish"
# Backup
BORGPREFIX="linux-"
BORGSHIRE='shire:borg'
alias backup-shire="do-borg-backup $DOCUMENT_ROOT $BORGSHIRE $BORGPREFIX $HOME/.borg.shire"
BORGSERVER='server:/media/raid2/borg/anish'
alias backup-server="do-borg-backup $DOCUMENT_ROOT $BORGSERVER $BORGPREFIX"

# Go
path_prepend "/usr/local/go/bin"
export GOPATH="$HOME/go"
path_prepend "$GOPATH/bin"

# OPAM configuration
test -r ~/.opam/opam-init/init.zsh && . ~/.opam/opam-init/init.zsh > /dev/null 2> /dev/null || true

# Add scripts to path

path_prepend "$HOME/.dotfiles_local/bin"

# Update local dotfiles
ldfu() {
    declare -f dfu > /dev/null && dfu &&
    (
        cd ~/.dotfiles_local && git pull --ff-only && ./install -q
    )
}
